{
  "name": "100 Words",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "A daily 100 word journal before starting the day",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "css": ["content_script_style.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "action": {
    "default_popup": "popup.html",
    "default_title": "100 Words"
  }
}
